<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/WidgetLayout"
    android:background="@drawable/widget_outline">

    <ImageButton
        android:id="@+id/WidgetPlayButton"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/play"
        android:layout_below="@+id/WidgetTitleText"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/WidgetNextButton"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/forward"
        android:layout_below="@+id/WidgetTitleText"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/WidgetPreviousButton"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        android:layout_below="@+id/WidgetTitleText"
        android:layout_toLeftOf="@+id/WidgetNextButton" />

    <TextView
        android:id="@+id/WidgetTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/WidgetArtistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:maxLines="1"
        android:gravity="right"
        android:ellipsize="end"
        android:textColor="@color/colorArtist"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignBaseline="@+id/WidgetTitleText"
        android:layout_alignBottom="@+id/WidgetTitleText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>