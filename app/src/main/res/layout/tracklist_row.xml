<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content"
    tools:context="sat.echoes.MainEcho">

    <TextView
        android:id="@+id/trackText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="track info"
        android:textColor="@color/colorAccent"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/artistText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="0.30"
        android:text="TextView"
        android:textColor="@color/colorArtist"
        android:textSize="18dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/trackText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/albumText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="TextView"
        android:textColor="@color/colorAlbum"
        android:textSize="18dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/artistText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lengthText"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/lengthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="right"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorLight"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/trackText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/albumText"
        app:layout_constraintLeft_toRightOf="@+id/artistText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <View
    android:layout_width="368dp"
    android:layout_height="1dp"
    android:background="@color/colorLight"
        android:id="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>